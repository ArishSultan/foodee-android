<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:background="@color/grey_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

            <foodie.app.rubikkube.foodie.fonts.robotoRegularBold

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Notifications"
            android:textColor="@color/darkBrown"
            android:textSize="20sp"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"

            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"

            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_height="match_parent"
            >

        <foodie.app.rubikkube.foodie.fonts.robotoRegular

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enable notifications"
            android:gravity="center|left"
            android:textColor="@color/darkBrown"
            android:textSize="15sp"

            />

            <com.suke.widget.SwitchButton
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:sb_shadow_color="@color/lightBrown"
                app:sb_checked_color="@color/lightBrown"

                                />

        </RelativeLayout>
        </RelativeLayout>

         <foodie.app.rubikkube.foodie.fonts.robotoRegularBold

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Contact Us"
            android:textColor="@color/darkBrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >

           <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            >

            <foodie.app.rubikkube.foodie.fonts.robotoRegular
                android:id="@+id/phone_num"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:text="458-570-9650"
                android:textColor="@color/darkBrown"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_local_phone_white"
                />


            <foodie.app.rubikkube.foodie.fonts.robotoRegular
                android:layout_toRightOf="@+id/phone_num"
                android:layout_marginLeft="60dp"
                android:textAlignment="textEnd"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="458-570-9650"
                android:textColor="@color/darkBrown"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                />

        </RelativeLayout>

        </RelativeLayout>

        <foodie.app.rubikkube.foodie.fonts.robotoRegularBold

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="About Us"
            android:textColor="@color/darkBrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@android:color/white"
            >
         <foodie.app.rubikkube.foodie.fonts.robotoRegular

            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Turkey Gravy Secrets Revealed"
            android:textColor="@color/darkBrown"
            android:textSize="14sp"
             android:layout_marginTop="10dp"
            android:textStyle="normal"
                      />
            <foodie.app.rubikkube.foodie.fonts.robotoRegular

            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="To make the best tasting turkey gravy you need three things; well-seasoned fat, flour, and a good rich broth. For each cup of finished gravy you will need one tablespoon of fat, one tablespoon of flour, 1 cup of broth. Start by making up some rich turkey broth. you cn use the turkey neck, heart, gizzard or other parts usually found packed inside the turkey cavity. Add some minced"
            android:textColor="@color/black"
            android:textSize="14sp"
                android:layout_marginTop="10dp"
            android:textStyle="normal"
                       />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>