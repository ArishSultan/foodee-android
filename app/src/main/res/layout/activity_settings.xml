<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/grey_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <foodie.app.rubikkube.foodie.fonts.robotoRegularBold

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Notifications"
            android:textColor="@color/darkBrown"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            >

        <foodie.app.rubikkube.foodie.fonts.robotoRegular

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable notifications"
            android:textColor="@color/darkBrown"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                                />

        </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Contact Us"
            android:textColor="@color/darkBrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

           <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            >

            <foodie.app.rubikkube.foodie.fonts.robotoRegular
                android:id="@+id/phone_num"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:text="458-570-9650"
                android:textColor="@color/darkBrown"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_local_phone_white"
                />


            <foodie.app.rubikkube.foodie.fonts.robotoRegular
                android:layout_toRightOf="@+id/phone_num"
                android:layout_marginLeft="60dp"
                android:textAlignment="textEnd"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="458-570-9650"
                android:textColor="@color/darkBrown"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                />

        </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="About Us"
            android:textColor="@color/darkBrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Turkey Gravy Secrets Revealed"
            android:textColor="@color/darkBrown"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginBottom="5dp"
                      />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="To make the best tasting turkey gravy you need three things; well-seasoned fat, flour, and a good rich broth. For each cup of finished gravy you will need one tablespoon of fat, one tablespoon of flour, 1 cup of broth. Start by making up some rich turkey broth. you cn use the turkey neck, heart, gizzard or other parts usually found packed inside the turkey cavity. Add some minced"
            android:textColor="@color/darkBrown"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginBottom="5dp"
                       />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>