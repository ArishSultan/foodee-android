<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/profile_side"
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <ImageView
                    android:id="@+id/cover_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image"
                    android:scaleType="fitXY"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/ligth_Brown" />


                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp"
                    />

                <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    />
                <ImageView
                    android:id="@+id/save_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/check"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:civ_border_width="2dp"
                    android:src="@drawable/two"
                    android:layout_centerInParent="true"
                    app:civ_border_color="@android:color/white"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_shape"
                    />
                <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                    android:id="@+id/add_photo"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Add Photo"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                    android:id="@+id/change_photo"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:text="Change Image"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/light_rectangular_box"
                    />


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/lower"
                android:layout_below="@+id/profile_side"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/data_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangular_line"
                        android:layout_below="@+id/like_icon"
                        android:layout_margin="10dp">


                        <EditText
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Username..."
                            android:editable="false"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:textSize="14sp"
                            android:paddingLeft="10dp" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangular_line"
                        android:layout_below="@+id/like_icon"
                        android:layout_margin="10dp">


                        <EditText
                            android:id="@+id/user_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Message..."
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:textSize="14sp"

                            android:paddingLeft="10dp" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangular_line"
                        android:layout_below="@+id/like_icon"
                        android:layout_margin="10dp">


                        <EditText
                            android:id="@+id/user_age"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter Your Age..."
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:editable="false"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:paddingLeft="10dp" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/location_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangular_line"
                        android:layout_below="@+id/like_icon"
                        android:layout_margin="10dp">


                        <EditText
                            android:id="@+id/user_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Location"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:editable="false"
                            android:textSize="14sp"
                            android:paddingLeft="10dp" />

                    </RelativeLayout>


                </LinearLayout>



                <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                    android:id="@+id/food_like"
                    android:layout_below="@id/data_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Food You Like"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkBrown" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/data_form"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_add_box_black_24dp"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/friend_like_food"
                    android:layout_below="@+id/food_like"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friend_like_food"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Gender"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkBrown" />

                <android.support.v7.widget.CardView
                    android:id="@+id/female_card"
                    android:layout_below="@+id/like"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">
                    <RelativeLayout
                        android:id="@+id/female_card_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangular_line">

                        <foodie.app.rubikkube.foodie.fonts.robotoRegular
                            android:id="@+id/female_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Females"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:textColor="@android:color/darker_gray"


                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/male_card"
                    android:layout_toRightOf="@+id/female_card"
                    android:layout_below="@+id/like"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">
                    <RelativeLayout
                        android:id="@+id/male_card_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangular_line">

                        <foodie.app.rubikkube.foodie.fonts.robotoRegular
                            android:id="@+id/male_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Males"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:textColor="@android:color/darker_gray"

                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                    android:id="@+id/age_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/male_card"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Ages You Prefer "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkBrown" />



                <foodie.app.rubikkube.foodie.fonts.robotoRegular
                    android:id="@+id/age_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_you"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="25-30"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    android:textColor="@color/grey" />



                <RelativeLayout
                    android:id="@+id/age_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/age_you"
                    android:background="@drawable/rectangular_line"
                    android:layout_margin="10dp">


                    <TextView
                        android:id="@+id/select_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Ages You Prefer"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="14sp"
                        android:paddingLeft="10dp" />


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>


                <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                    android:id="@+id/contribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_val"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Your Contribution "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkBrown" />

                <android.support.v7.widget.CardView
                    android:id="@+id/twenty_precent_crd"
                    android:layout_below="@+id/contribution"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangular_line"

                        >

                        <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                            android:id="@+id/twenty_precent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="20%"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/thirty_percent_card"
                    android:layout_toRightOf="@+id/twenty_precent_crd"
                    android:layout_below="@+id/contribution"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangular_line"
                        >

                        <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                            android:id="@+id/thirty_percent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="30%"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/fifty_percent_card"
                    android:layout_toRightOf="@+id/thirty_percent_card"
                    android:layout_below="@+id/contribution"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangular_line"
                        >

                        <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                            android:id="@+id/fifty_percent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="50%"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/treat_me_card"
                    android:layout_toRightOf="@+id/fifty_percent_card"
                    android:layout_below="@+id/contribution"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangular_line"

                        >

                        <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                            android:id="@+id/treat_me"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="Treat Me"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>