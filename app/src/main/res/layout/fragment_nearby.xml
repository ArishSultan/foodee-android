<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MapsActivity">
       <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MapsActivity" />


       <LinearLayout
           android:layout_below="@id/search_view"
           android:layout_width="match_parent"
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_height="wrap_content">

              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_search_all_food"
                  android:layout_width="60dp"
                  android:layout_height="40dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="4dp"
                  >

                     <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                         android:id="@+id/tv_search_all_food"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:text="All"
                         android:textSize="16sp" />

              </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
                  android:id="@+id/cv_search_50_contribution"
                  android:layout_width="55dp"
                  android:layout_height="40dp"
                  android:layout_marginLeft="6dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="4dp"
                  >

                     <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                         android:id="@+id/tv_search_50_contribution"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:textSize="16sp"
                         android:gravity="center"
                         android:text="50%"
                         />

              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_search_treat_me"
                  android:layout_width="75dp"
                  android:layout_height="40dp"
                  android:layout_marginLeft="6dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="4dp"
                  >

                     <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                         android:id="@+id/tv_search_treat_me"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:textSize="16sp"
                         android:gravity="center"
                         android:text="Treat Me"
                         />

              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:id="@+id/cv_match_me_treat_me"
                  android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_marginLeft="6dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="4dp"
                  >

                     <foodie.app.rubikkube.foodie.fonts.robotoRegularBold
                         android:id="@+id/tv_match_me"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:textSize="16sp"
                         android:paddingLeft="8dp"
                         android:paddingRight="6dp"

                         android:gravity="center"

                         android:drawableRight="@drawable/lock_paid"
                         android:text="Match me "
                         />

              </androidx.cardview.widget.CardView>

       </LinearLayout>
</RelativeLayout>